# Kafka Configuration
# PROVIDER: LOCAL | AZURE | AWS
KAFKA_PROVIDER=AZURE
KAFKA_BROKER=your-eventhub-namespace.servicebus.windows.net:9093
KAFKA_TOPIC_IN=ocr.documents.to_process
KAFKA_TOPIC_OUT=ocr.documents.processed
KAFKA_GROUP_ID=ocr-service

# Kafka SASL Configuration (required for AZURE and AWS)
KAFKA_SASL_USERNAME=$ConnectionString
KAFKA_SASL_PASSWORD=Endpoint=sb://your-eventhub-namespace.servicebus.windows.net/;SharedAccessKeyName=YourPolicyName;SharedAccessKey=YourSharedAccessKey

# Storage Configuration
# STORAGE_PROVIDER: MINIO | AZURE
STORAGE_PROVIDER=AZURE
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net
STORAGE_CONTAINER_NAME=ocr-documents

# Python Configuration
PYTHONUNBUFFERED=1
